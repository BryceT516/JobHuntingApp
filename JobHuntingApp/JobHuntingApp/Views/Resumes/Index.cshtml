@model IEnumerable<JobHuntingApp.Models.Resume>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ResumeTitle)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ResumeFile)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ResumeTitle)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ResumeFile)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResumeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResumeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResumeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
